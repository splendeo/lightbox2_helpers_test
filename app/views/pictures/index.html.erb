<% title "Pictures" %>

<table>
  <tr>
    <th>Gallery</th>
    <th>Caption</th>
    <th>Filename</th>
  </tr>
  <% for picture in @pictures %>
    <tr>
      <td><%=h picture.gallery_id %></td>
      <td><%=h picture.caption %></td>
      <td><%=h picture.filename %></td>
      <td><%= link_to "Show", picture %></td>
      <td><%= link_to "Edit", edit_picture_path(picture) %></td>
      <td><%= link_to "Destroy", picture, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Picture", new_picture_path %></p>
